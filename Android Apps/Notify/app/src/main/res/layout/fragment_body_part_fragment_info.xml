<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBodyPartInfo">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewNota"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:src="@drawable/back1"
            android:transitionName="imageNota" />

        <TextView
            android:id="@+id/nota_text_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@android:color/black"

            android:gravity="center_horizontal"
            android:text="Empty workouts"
            android:textSize="30sp"
            android:transitionName="textoNota" />


    </LinearLayout>
    <ListView
        android:id="@+id/ListBodyPartWourkouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"/>


</FrameLayout>
